{
  "name": "besi-c.github",
  "version": "1.0.0",
  "description": "GitHub Pages Site for BESI-C",
  "main": ".eleventy.js",
  "scripts": {
    "sass": "sass --style=compressed --no-source-map includes/source.scss docs/style/general.css",
    "watch:eleventy": "eleventy --serve",
    "watch:sass": "npm run sass -- --watch",
    "start": "npm-run-all sass --parallel watch:*",
    "build": "npm run sass && eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/besi-c/besi-c.github.io.git"
  },
  "author": "Penn Bauman <pcbg8b@virginia.edu>",
  "homepage": "https://besic.org",
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.49.7"
  }
}
